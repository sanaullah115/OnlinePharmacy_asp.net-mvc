@using ProjectAdmin.Models;
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <h4>Checkout Page</h4>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            @if (Session["cart"] == null)
            {
                <div class="alert alert-danger">
                    <strong>No product added to cart!</strong>
                </div>

            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Add</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Item item in (List<Item>)Session["cart"])
                        {
                            <tr>
                                <td>@item.product.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a href="@Url.Action("IncreaseQty", "Home", new { productId = item.product.ProductId})">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                    <a href="@Url.Action("DecreaseQty", "Home", new { productId = item.product.ProductId })">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="container shadow p-2 mb-2" style="background: linear-gradient(90deg, #ffba00 0%, #ff6c00 100%) !important;">
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="text-center">Account Detials</h4>
                        </div>
                    </div>
                </div>
                <div class="container mb-3">
                    <div class="row">
                        <div class="col-md-12">

                            @using (Html.BeginForm("Checkout", "Home", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Phone Number</label>
                                    <input type="text" name="PhoneNumber" maxlength="11" class="form-control" id="exampleInputEmail1" placeholder="Enter Phone Number" required>
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your Number with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail2">Credit Card Number</label>
                                    <input type="text" name="CreditCardNumber" maxlength="16" class="form-control" id="exampleInputEmail2" placeholder="Enter Phone Number" required>
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your Credit Card Number with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail2">Pin Number</label>
                                    <input type="text" name="PinCode" maxlength="4" class="form-control" id="exampleInputEmail2" placeholder="Enter Phone Number" required>
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your Pin Number with anyone else.</small>
                                </div>

                                <input type="submit" class="btn" style="background: linear-gradient(90deg, #ffba00 0%, #ff6c00 100%) !important;" value="Save Data">

                            }
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
