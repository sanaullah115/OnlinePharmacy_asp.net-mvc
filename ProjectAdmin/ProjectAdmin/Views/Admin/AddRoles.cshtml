@model IEnumerable<ProjectAdmin.Models.UserRole>
@{
    ViewBag.Title = "AddRoles";
}
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Roles</h5>
                            <span><code>Add</code> Roles</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <form action="AddRoles" method="post">
                                        <label for="">Add Role</label>
                                        <input type="text" name="Roles" class="form-control">
                                        <input type="submit" value="Add Role" class=" mt-3 btn btn-info" />
                                        <br /><br />
                                        <span>@Html.Raw(TempData["AddRoleMessage"])</span>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*Show Roles By List*@
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Roles</h5>
                            <span><code>List</code> of All Roles</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-bordered" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>UserName</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.UserRoles)
                                                {
                                                    <tr>
                                                        <td scope="row">@item.UserID</td>
                                                        <td>@item.Roles</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

